<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Members Only</title>
    </head>

    <body>
        <%- include('../partials/navbar.ejs') %>

        <h1>Login</h1>

        <form action="/account/login" method="POST">
            <% const isInvalid = !!errors?.login %>

            <div class="input-group <%= isInvalid ? 'invalid' : '' %>">
                <label for="username">Username</label>
                <input
                    id="username"
                    type="text"
                    name="username"
                    placeholder="Username"
                    value="<%= previous ? previous.username : '' %>"
                />
                <% if (errors?.username) { %>
                <small class="error"><%= errors.username.msg %></small>
                <% } %>
            </div>

            <div class="input-group <%= isInvalid ? 'invalid' : '' %>">
                <label for="password">Password</label>
                <input
                    id="password"
                    type="password"
                    name="password"
                    placeholder="Password"
                />
                <% if (errors?.password) { %>
                <small class="error"><%= errors.password.msg %></small>
                <% } %>
            </div>

            <% if (errors?.login) { %>
            <div><small class="error"><%= errors.login.msg %></small></div>
            <% } %>

            <button type="submit">Login</button>

            <div>
                Don't have an account? <a href="/account/sign-up">Sign Up</a>
            </div>
        </form>

        <%- include('../partials/footer.ejs') %>
    </body>
</html>
